{
  "compilerOptions": {
    "jsx": "preserve",

    "module": "nodenext",
    "moduleResolution": "nodenext",

    "strict": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "esModuleInterop": true,
    "skipLibCheck": true,

    "resolveJsonModule": true,
  },
  "exclude": ["dist/"],
}
